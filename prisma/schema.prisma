// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

enum Role {
  USER
  ADMIN
}

enum Relationship {
  TITULAR
  CONJUGE
  FILHO
  FILHA
  PAI
  MAE
  IRMAO
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  username      String    @unique
  password      String
  fullName      String
  image         String?
  resetPassword Boolean   @default(false)
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model FamilyMember {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  fullName     String
  relationship Relationship
  username     String       @unique
  dateOfBirth  DateTime?
  userId       String       @db.ObjectId
  userLinkId   String       @db.ObjectId
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@map("family_members")
}

model Document {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  type       String
  status     String
  fileUrl    String?
  fileSize   Int?
  userId     String   @db.ObjectId
  uploadedAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("documents")
}

model Task {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  status      String
  priority    String
  userId      String    @db.ObjectId
  assignedTo  String?   @db.ObjectId
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("tasks")
}

model Financial {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  totalPaid Float    @default(0)
  total     Float    @default(0)
  remaining Float    @default(0)
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("financials")
}

model Cost {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  imageUrl    String?
  category    String
  currency    String
  quantity    Int
  unitValue   Float
  tax         Float?
  fee         Float?
  deliveryFee Float?
  userId      String   @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  payments    Payment[]

  @@map("costs")
}

model Payment {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  costId      String   @db.ObjectId
  cost        Cost     @relation(fields: [costId], references: [id], onDelete: Cascade)
  amount      Float
  date        DateTime
  receipt     String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("payments")
}
